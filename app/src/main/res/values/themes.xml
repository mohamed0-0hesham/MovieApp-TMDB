<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.MovieTrainingApplication" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/Primary_Color_Dark_blue</item>
        <item name="colorPrimaryVariant">#0C1D30</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/Secondary_Color_Light_blue</item>
        <item name="colorSecondaryVariant">#027A79</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:textColorTertiary">@color/Tertiary_Color_Light_green</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/Primary_Color_Dark_blue</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="SplashScreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/Primary_Color_Dark_blue</item>
        <item name="colorPrimaryVariant">#0C1D30</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/Secondary_Color_Light_blue</item>
        <item name="colorSecondaryVariant">#027A79</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:textColorTertiary">@color/Tertiary_Color_Light_green</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!-- Customize your theme here. -->
        <item name="android:windowIsTranslucent">true</item>
    </style>
</resources>